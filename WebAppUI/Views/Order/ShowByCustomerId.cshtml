@model OrderListViewModel

@{
    Layout = "Customer_Layout";
    ViewData["Title"] = "Order";

}

@if (Model.orders.Count > 0)
{
        <table class="table table-striped table-dark">
            <thead>
                <tr class="text-center">
                    <td>Id</td>
                    <td>Customer Id</td>
                    <td>Installment</td>
                    <td>Date of Purchase</td>
                    <td>State</td>
                    <td>Shipping Address</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model.orders)
                {
                <tr class="text-center">
                    <td>@order.Id</td>
                    <td>@order.CustomerId</td>
                    <td>@order.Installment</td>
                    <td>@order.DateofPurchase</td>
                    <td>@order.State</td>
                    <td>@order.ShippingAddress</td>
                    <td><a class="btn btn-primary" asp-controller="Order" asp-action="ShowOrderDetail" asp-route-orderId="@order.Id">Details</a></td>
                    <td><a class="btn btn-primary" asp-controller="Order" asp-action="Return" asp-route-orderId="@order.Id">Return</a></td>
                </tr>
                }
            </tbody>
        </table>
}
else
{
<div style="margin:2em; padding:0.5em; border-radius:4px;" class="d-inline badge-danger no-products">You have not ordered yet</div>
}
