@model CustomerAddViewModel

@{ 
    Layout = "Customer_Layout";
    ViewData["Title"] = "Customer";
}
<div class="grid align__item" style="margin-top:1rem;">

    <div class="register">

        <svg xmlns="http://www.w3.org/2000/svg" class="site__logo" width="56" height="84" viewBox="77.7 214.9 274.7 412"><defs><linearGradient id="a" x1="0%" y1="0%" y2="0%"><stop offset="0%" stop-color="#8ceabb" /><stop offset="100%" stop-color="#378f7b" /></linearGradient></defs><path fill="url(#a)" d="M215 214.9c-83.6 123.5-137.3 200.8-137.3 275.9 0 75.2 61.4 136.1 137.3 136.1s137.3-60.9 137.3-136.1c0-75.1-53.7-152.4-137.3-275.9z" /></svg>

        <h2>Sign Up</h2>

        <form asp-controller="Customer" asp-action="CreateAnAccount">
            <div class="form__field">
                <label asp-for="customer.PhoneNumber">Phone Number</label>
                <input type="number" asp-for="customer.PhoneNumber" class="form-control" placeholder="Phone Number" />
                <span asp-validation-for="customer.PhoneNumber"></span>
            </div>
            <div class="form__field" style="margin-top:1rem;">
                <label asp-for="customer.Password">Password</label>
                <input type="password" asp-for="customer.Password" class="form-control" placeholder="Password" />
                <span asp-validation-for="customer.Password"></span>
            </div>
            <div class="form__field" style="margin-top:1rem;">
                <label asp-for="customer.Name">Name</label>
                <input asp-for="customer.Name" class="form-control" placeholder="Name" />
                <span asp-validation-for="customer.Name"></span>
            </div>
            <div class="form__field" style="margin-top:1rem;">
                <label asp-for="customer.Surname">Surname</label>
                <input asp-for="customer.Surname" class="form-control" placeholder="Surname" />
                <span asp-validation-for="customer.Surname"></span>
            </div>
            <div class="form__field" style="margin-top:1rem;">
                <label asp-for="customer.Mail">Mail</label>
                <input type="email" asp-for="customer.Mail" class="form-control" placeholder="Mail" />
                <span asp-validation-for="customer.Mail"></span>
            </div>
            <div class="form__field" style="margin-top:1rem;">
                <label asp-for="customer.Address">Address</label>
                <textarea id="address-area" cols="5" asp-for="customer.Address" class="form-control" placeholder="Address"></textarea>
                <span asp-validation-for="customer.Address"></span>
            </div>
            <div class="form__field" style="margin-top:1rem;">
                <input type="submit" value="Create" class="btn btn-group-lg btn-primary" />
            </div>
        </form>
        <p>Already have an account?<a asp-controller="Customer" asp-action="SignIn">Sign in</a></p>

    </div>

</div>

