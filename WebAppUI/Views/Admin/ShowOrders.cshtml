@model OrderListViewModel

@{
    Layout = "Admin_Layout";
    ViewData["Title"] = "Admin";
}
<table class="table table-striped table-dark">
    <thead>
        <tr class="text-center">
            <td>Id</td>
            <td>Customer Id</td>
            <td>Installment</td>
            <td>Date of Purchase</td>
            <td>State</td>
            <td>ShippingAddress</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.orders)
	{
        <tr class="text-center">
            <td>@order.Id</td>
            <td>@order.CustomerId</td>
            <td>@order.Installment</td>
            <td>@order.DateofPurchase</td>
            <td>@order.State</td>
            <td>@order.ShippingAddress</td>
            <td><a class="btn btn-primary" asp-controller="Admin" asp-action="Approve" asp-route-orderId="@order.Id">Approve</a></td>
        </tr>
	}
    </tbody>
</table>